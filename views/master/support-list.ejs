<!DOCTYPE html>
<html lang="uz">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Dern Yordam</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('../partials/master-header', { currentPage: 'users' }) %>
    
    <div class="dashboard-content">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2"><i class="fas fa-user"></i> <%= title %></h1>
            <div>
                <a href="/master/users" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Foydalanuvchilarga Qaytish
                </a>
                <button class="btn btn-primary" onclick="editUser()">
                    <i class="fas fa-edit"></i> Foydalanuvchini Tahrirlash
                </button>
            </div>
        </div>

        <div class="row">
            <!-- Foydalanuvchi Ma'lumotlari Kartasi -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-id-card"></i> Foydalanuvchi Ma'lumotlari</h5>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-3">
                            <div class="avatar-large">
                                <%= user.firstName.charAt(0) + user.lastName.charAt(0) %>
                            </div>
                            <h4 class="mt-2"><%= user.firstName %> <%= user.lastName %></h4>
                            <div class="user-role-badges">
                                <% if (user.isMaster) { %>
                                    <span class="badge badge-danger">
                                        <i class="fas fa-crown"></i> Bosh Administrator
                                    </span>
                                <% } else if (user.isAdmin) { %>
                                    <span class="badge badge-warning">
                                        <i class="fas fa-user-shield"></i> Administrator
                                    </span>
                                <% } else { %>
                                    <span class="badge badge-success">
                                        <i class="fas fa-user"></i> Mijoz
                                    </span>
                                <% } %>
                                <span class="badge badge-<%= user.accountType === 'business' ? 'primary' : 'secondary' %>">
                                    <i class="fas fa-<%= user.accountType === 'business' ? 'building' : 'user' %>"></i>
                                    <%= user.accountType === 'business' ? 'Biznes' : 'Shaxsiy' %>
                                </span>
                            </div>
                        </div>

                        <div class="user-details">
                            <div class="detail-item">
                                <strong><i class="fas fa-envelope"></i> Email:</strong>
                                <span><%= user.email %></span>
                            </div>
                            <div class="detail-item">
                                <strong><i class="fas fa-user-tag"></i> Foydalanuvchi nomi:</strong>
                                <span><%= user.username || 'Belgilanmagan' %></span>
                            </div>
                            <div class="detail-item">
                                <strong><i class="fas fa-phone"></i> Telefon:</strong>
                                <span><%= user.phone || 'Berilmagan' %></span>
                            </div>
                            <% if (user.businessName) { %>
                            <div class="detail-item">
                                <strong><i class="fas fa-building"></i> Biznes:</strong>
                                <span><%= user.businessName %></span>
                            </div>
                            <% } %>
                            <div class="detail-item">
                                <strong><i class="fas fa-calendar-alt"></i> Qo'shilgan:</strong>
                                <span><%= new Date(user.createdAt).toLocaleDateString('uz-UZ') %></span>
                            </div>
                            <div class="detail-item">
                                <strong><i class="fas fa-clock"></i> Oxirgi Kirish:</strong>
                                <span><%= user.lastLogin ? new Date(user.lastLogin).toLocaleDateString('uz-UZ') : 'Hech qachon' %></span>
                            </div>
                            <div class="detail-item">
                                <strong><i class="fas fa-check-circle"></i> Holat:</strong>
                                <% if (user.isEmailVerified) { %>
                                    <span class="badge badge-success">Tasdiqlangan</span>
                                <% } else { %>
                                    <span class="badge badge-warning">Tasdiqlanmagan</span>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Foydalanuvchi Statistikasi Kartasi -->
                <div class="card mt-3">
                    <div class="card-header">
                        <h5><i class="fas fa-chart-bar"></i> Yordam Statistikasi</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-6">
                                <div class="stat-item">
                                    <h4 class="text-primary"><%= userRequestStats.total %></h4>
                                    <small>Jami So'rovlar</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="stat-item">
                                    <h4 class="text-success"><%= userRequestStats.resolved %></h4>
                                    <small>Hal Qilingan</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="stat-item">
                                    <h4 class="text-info"><%= userRequestStats.pending %></h4>
                                    <small>Kutilmoqda</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="stat-item">
                                    <h4 class="text-danger"><%= userRequestStats.rejected %></h4>
                                    <small>Rad Etilgan</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Yordam So'rovlari Tarixi -->
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-ticket-alt"></i> Yordam So'rovlari Tarixi</h5>
                        <small class="text-muted">Jami: <%= supportRequests.length %> so'rov</small>
                    </div>
                    <div class="card-body">
                        <% if (supportRequests.length === 0) { %>
                            <div class="text-center text-muted py-5">
                                <i class="fas fa-inbox fa-3x mb-3"></i>
                                <h5>Yordam So'rovlari Yo'q</h5>
                                <p>Bu foydalanuvchi hali hech qanday yordam so'rovi yubormagan.</p>
                            </div>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Sarlavha</th>
                                            <th>Qurilma</th>
                                            <th>Muhimlik</th>
                                            <th>Holat</th>
                                            <th>Tasdiqlash</th>
                                            <th>Yaratilgan</th>
                                            <th>Harakatlar</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% supportRequests.forEach(request => { %>
                                            <tr>
                                                <td><code><%= request._id.toString().slice(-6) %></code></td>
                                                <td>
                                                    <strong><%= request.title %></strong>
                                                    <br><small class="text-muted"><%= request.description.substring(0, 50) %>...</small>
                                                </td>
                                                <td>
                                                    <span class="badge badge-info">
                                                        <%= request.deviceType %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="badge badge-<%= request.urgency === 'critical' ? 'danger' : request.urgency === 'high' ? 'warning' : request.urgency === 'medium' ? 'info' : 'secondary' %>">
                                                        <%= request.urgency === 'critical' ? 'Juda Muhim' : request.urgency === 'high' ? 'Muhim' : request.urgency === 'medium' ? 'O\'rtacha' : 'Past' %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="badge badge-<%= request.status === 'resolved' ? 'success' : request.status === 'in-progress' ? 'warning' : request.status === 'pending' ? 'info' : 'secondary' %>">
                                                        <%= request.status === 'resolved' ? 'Hal Qilingan' : request.status === 'in-progress' ? 'Jarayonda' : request.status === 'pending' ? 'Kutilmoqda' : request.status %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="badge badge-<%= request.approvalStatus === 'approved' ? 'success' : request.approvalStatus === 'rejected' ? 'danger' : 'warning' %>">
                                                        <%= request.approvalStatus === 'approved' ? 'Tasdiqlangan' : request.approvalStatus === 'rejected' ? 'Rad Etilgan' : 'Tasdiqlash Kutilmoqda' %>
                                                    </span>
                                                </td>
                                                <td><%= new Date(request.createdAt).toLocaleDateString('uz-UZ') %></td>
                                                <td>
                                                    <a href="/master/support/<%= request._id %>" class="btn btn-sm btn-outline-primary" title="Tafsilotlarni Ko'rish">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/master-footer') %>
    
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        function editUser() {
            // Foydalanuvchini tahrirlash funksiyasi amalga oshiriladi
            alert('Foydalanuvchini tahrirlash funksiyasi amalga oshiriladi');
        }
    </script>

    <style>
        .avatar-large {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(135deg, #007bff, #0056b3);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 24px;
            margin: 0 auto;
        }
        
        .user-role-badges {
            margin: 10px 0;
        }
        
        .user-role-badges .badge {
            margin: 2px;
        }
        
        .detail-item {
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 1px solid #f0f0f0;
        }
        
        .detail-item:last-child {
            border-bottom: none;
        }
        
        .detail-item strong {
            display: block;
            color: #495057;
            margin-bottom: 5px;
        }
        
        .stat-item {
            padding: 10px;
            border-radius: 8px;
            background: #f8f9fa;
            margin-bottom: 10px;
        }
        
        .stat-item h4 {
            margin: 0;
            font-weight: bold;
        }
        
        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border: 1px solid rgba(0, 0, 0, 0.125);
        }
    </style>
</body>
</html>
